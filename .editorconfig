root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[*.{cmd,[cC][mM][dD]}]
end_of_line = crlf

[*.{bat,[bB][aA][tT]}]
end_of_line = crlf

[*.sh]
end_of_line = lf

[*.ps1]
end_of_line = lf 